<LinearLayout
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!-- WYBOR ZAKRESU -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"

        android:paddingTop="5dp">

        <Spinner
            android:id="@+id/spinner_zakres_dat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <!-- WYSWIETLENIE ZAKRESU -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        >

        <TextView
            android:id="@+id/textzakreswykresu"
            style="@style/tekstZakresuDat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""/>

    </LinearLayout>


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayoutTabela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        >

        <!-- TABELA -->
        <!-- "#E3E3E3" -->
        <!--<ListView-->
            <!--android:id="@+id/listViewWyniki"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->
        <!--</ListView>-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerWyniki"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />

        <!-- KONIEC TABELI WYNIKOW -->
    </LinearLayout>

