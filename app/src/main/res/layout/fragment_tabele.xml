            <!-- TABELA -->
            <!-- "#E3E3E3" -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F2F2F2"
                android:orientation="vertical"
                android:padding="3dp">

                <TableLayout
                    android:id="@+id/tabela_wynikow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#FFFFFF"
                    android:paddingLeft="3dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:id="@+id/tableRowTekstyKolumn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/TextViewKolumnaData"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="1dp"
                            android:background="#FFFFFF"
                            android:text="@string/text_data"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/TextViewKolumnaBMI"
                            android:layout_width="38dp"
                            android:layout_marginRight="1dp"
                            android:background="#FFFFFF"
                            android:gravity="center_horizontal"
                            android:text="@string/text_bmi"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/TextViewKolumnaWaga"
                            android:background="#FFFFFF"
                            android:gravity="center_horizontal"
                            android:text="@string/text_waga"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/TextView04"
                            android:background="#FFFFFF"
                            android:text=""/>
                    </TableRow>
                </TableLayout>

                <ListView
                    android:id="@+id/listViewWyniki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>

            </LinearLayout>
            <!-- KONIEC TABELI WYNIKOW -->
        </LinearLayout>
    </android.support.v7.widget.CardView>
