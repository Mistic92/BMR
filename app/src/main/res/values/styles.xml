<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!--<item name="android:colorPrimary">@color/primary</item>-->
        <!--<item name="android:colorPrimaryDark">@color/primary_dark</item>-->
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--<item name="android:navigationBarColor">@color/primary_dark</item>-->
        <!--<item name="android:colorAccent">@color/accentColor</item>-->
    </style>
    <!--
    <item name="android:windowTranslucentNavigation">false</item>
            <item name="android:windowTranslucentStatus">false</item>
            <item name="android:windowNoTitle">true</item>
            <item name="windowActionBar">false</item>
            -->

    <!--Styl tekstow w kalkulatorze, teksty przy opisach typu wybierz plec, wiek, aktywnosc-->
    <style name="bmr_teksty" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textbmr</item>
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <!--Tekst wyswietlajacy wybrany zakres dat-->
    <style name="tekstZakresuDat" parent="bmr_teksty">
        <item name="android:textSize">15sp</item>
    </style>

    <!--Styl tekstow w kalkulatorze, przy tekstach typu "wybierz plec".-->
    <style name="bmr_inne_teksty" parent="bmr_teksty">
        <item name="android:textSize">22sp</item>
    </style>

    <!--Styl edittextow w kalkulatorze-->
    <style name="bmr_edittext" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/edittexty</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <!--Styl wynikow w kalkulatorze czyli ile weglowodanow itp, bmi, bmr-->
    <style name="tekst_bmr_wyniki" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/edittexty</item>
        <item name="android:textSize">25sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- Znaczenia BMI w tabeli, te co zmieniaja kolory, parent to rozmiar wynikow w edittextach -->
    <style name="znaczeniaBMI">
        <item name="android:textColor">@color/edittexty</item>
        <item name="android:textSize">17sp</item>
        <item name="android:typeface">sans</item>
    </style>
    <!--  -->
    <style name="wyniki" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/edittexty</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- PODPISY KART -->
    <style name="podpisy_kart" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#737373</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- TABELA WYNIKOW -->
    <style name="tekst_tabela_wyniki">
        <item name="android:textColor">@color/textbmr</item>
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="dataWyniku" parent="tekst_tabela_wyniki">
        <item name="android:textSize">16sp</item>
    </style>


    <!-- BUTTONY -->
    <style name="buttons">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="przyciskiAgr" parent="buttons">
        <item name="android:textSize">25sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/textbmr</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="buttony_ustawienia" parent="buttons">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>

    </style>


    <style name="wybor_daty_podpisy">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/edittexty</item>
    </style>

    <!--Wygląd itemu w spinnerze wyboru daty-->
    <style name="spinner_item">
        <item name="android:textColor">@color/textbmr</item>
        <item name="android:textSize">23sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="spinner_date" parent="spinner_item">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="leweMenu">
        <item name="android:background">@color/tloGlowne</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textbmr</item>


    </style>

</resources>
